  "devDependencies": {
    "ava": "^3.9.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "js-yaml": "^3.14.0",
